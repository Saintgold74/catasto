/* Classic Business Theme per Meridiana - Stile professionale elegante */
* {
    font-family: "Times New Roman", serif;
    font-size: 10pt;
    color: #2C2C2C; /* Testo scuro professionale */
}

QMainWindow {
    background-color: #F8F9FA; /* Sfondo principale grigio chiaro */
}

QWidget {
    background-color: #F8F9FA;
    color: #2C2C2C;
}

QLabel {
    color: #1A1A1A;
    background-color: transparent;
    padding: 3px;
    font-weight: 500;
}

/* Input Controls */
QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QDateEdit, QDateTimeEdit, QComboBox {
    background-color: #FFFFFF;
    color: #2C2C2C;
    border: 2px solid #D1D5DB;
    border-radius: 6px;
    padding: 6px 10px;
    selection-background-color: #2563EB;
    selection-color: white;
    font-size: 10pt;
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, 
QDoubleSpinBox:focus, QDateEdit:focus, QDateTimeEdit:focus, QComboBox:focus {
    border: 2px solid #2563EB;
    background-color: #F9FAFB;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

QLineEdit[readOnly="true"], QTextEdit[readOnly="true"] {
    background-color: #F3F4F6;
    color: #6B7280;
    border: 2px solid #E5E7EB;
}

/* Buttons */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3B82F6, stop: 1 #2563EB);
    color: white;
    border: 1px solid #1D4ED8;
    border-radius: 6px;
    padding: 10px 20px;
    font-weight: 600;
    min-width: 90px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2563EB, stop: 1 #1D4ED8);
    border: 1px solid #1E40AF;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1D4ED8, stop: 1 #1E40AF);
    padding: 11px 19px 9px 21px; /* Effetto pressed */
}

QPushButton:disabled {
    background-color: #E5E7EB;
    color: #9CA3AF;
    border: 1px solid #D1D5DB;
}

/* Tab Widget */
QTabWidget::pane {
    border: 2px solid #D1D5DB;
    background-color: #FFFFFF;
    padding: 8px;
    border-radius: 6px;
    margin-top: -1px;
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #F9FAFB, stop: 1 #E5E7EB);
    color: #374151;
    border: 2px solid #D1D5DB;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 8px 16px;
    margin-right: 3px;
    font-weight: 500;
    min-width: 80px;
}

QTabBar::tab:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #F3F4F6, stop: 1 #D1D5DB);
    color: #1F2937;
}

QTabBar::tab:selected {
    background: #FFFFFF;
    color: #2563EB;
    font-weight: 700;
    border-color: #D1D5DB;
    border-bottom-color: #FFFFFF;
    padding: 8px 20px;
}

/* Table Widget */
QTableWidget {
    gridline-color: #E5E7EB;
    background-color: #FFFFFF;
    alternate-background-color: #F9FAFB;
    selection-background-color: #DBEAFE;
    selection-color: #1E40AF;
    border: 2px solid #D1D5DB;
    border-radius: 6px;
    color: #374151;
}

QHeaderView::section {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #F3F4F6, stop: 1 #E5E7EB);
    color: #1F2937;
    padding: 8px;
    border: 1px solid #D1D5DB;
    border-bottom: 2px solid #9CA3AF;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

QHeaderView::section:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #E5E7EB, stop: 1 #D1D5DB);
}

/* ComboBox */
QComboBox::drop-down {
    border: none;
    width: 25px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #F9FAFB, stop: 1 #E5E7EB);
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    border-left: 1px solid #D1D5DB;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #6B7280;
    width: 0;
    height: 0;
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    color: #374151;
    selection-background-color: #DBEAFE;
    selection-color: #1E40AF;
    border: 2px solid #D1D5DB;
    border-radius: 6px;
    padding: 4px;
}

/* ScrollBars */
QScrollBar:vertical {
    background-color: #F3F4F6;
    width: 14px;
    border-radius: 7px;
    border: 1px solid #E5E7EB;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #D1D5DB, stop: 1 #9CA3AF);
    border-radius: 6px;
    min-height: 25px;
    border: 1px solid #9CA3AF;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #9CA3AF, stop: 1 #6B7280);
}

QScrollBar:horizontal {
    background-color: #F3F4F6;
    height: 14px;
    border-radius: 7px;
    border: 1px solid #E5E7EB;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #D1D5DB, stop: 1 #9CA3AF);
    border-radius: 6px;
    min-width: 25px;
    border: 1px solid #9CA3AF;
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #9CA3AF, stop: 1 #6B7280);
}

/* Menu Bar */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FFFFFF, stop: 1 #F3F4F6);
    color: #1F2937;
    border-bottom: 2px solid #D1D5DB;
    font-weight: 600;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 15px;
    border-radius: 4px;
    margin: 2px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #DBEAFE, stop: 1 #BFDBFE);
    color: #1E40AF;
}

QMenu {
    background-color: #FFFFFF;
    color: #374151;
    border: 2px solid #D1D5DB;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    padding: 6px 20px;
    border-radius: 4px;
    margin: 1px;
}

QMenu::item:selected {
    background-color: #DBEAFE;
    color: #1E40AF;
}

/* Status Bar */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #F3F4F6, stop: 1 #E5E7EB);
    color: #6B7280;
    border-top: 2px solid #D1D5DB;
    font-style: italic;
    padding: 4px;
}

/* Group Box */
QGroupBox {
    color: #1F2937;
    border: 2px solid #D1D5DB;
    border-radius: 8px;
    margin-top: 12px;
    background-color: #FFFFFF;
    font-weight: 600;
    padding-top: 8px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 8px 0 8px;
    color: #2563EB;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    background-color: #F8F9FA;
}

/* Check Box */
QCheckBox {
    color: #374151;
    spacing: 8px;
    font-weight: 500;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    background-color: #FFFFFF;
    border: 2px solid #D1D5DB;
    border-radius: 4px;
}

QCheckBox::indicator:hover {
    border: 2px solid #2563EB;
}

QCheckBox::indicator:checked {
    background-color: #2563EB;
    border: 2px solid #2563EB;
    image: none;
}

/* Radio Button */
QRadioButton {
    color: #374151;
    spacing: 8px;
    font-weight: 500;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    background-color: #FFFFFF;
    border: 2px solid #D1D5DB;
    border-radius: 9px;
}

QRadioButton::indicator:hover {
    border: 2px solid #2563EB;
}

QRadioButton::indicator:checked {
    background-color: #2563EB;
    border: 2px solid #2563EB;
}