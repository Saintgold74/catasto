/* Stile "Terra di Siena" - Versione ottimizzata con tab abbreviati */
QWidget {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 10pt;
    color: #3E2723;
}

QMainWindow, QDialog {
    background-color: #FFF8E1;
}

QGroupBox {
    font-weight: bold;
    border: 2px solid #8D6E63;
    border-radius: 8px;
    margin-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    left: 10px;
    color: #5D4037;
}

QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QDateEdit, QComboBox {
    background-color: #FFFFFF;
    border: 1px solid #BCAAA4;
    border-radius: 4px;
    padding: 5px;
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QDateEdit:focus, QComboBox:focus {
    border-color: #6D4C41;
    border-width: 2px;
}

QPushButton {
    background-color: #795548;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 4px;
    padding: 8px 12px;
    min-width: 100px;
}

QPushButton:hover {
    background-color: #6D4C41;
}

QPushButton:pressed {
    background-color: #5D4037;
}

QPushButton:disabled {
    background-color: #D7CCC8;
    color: #BCAAA4;
}

QTabWidget::pane {
    border-top: 3px solid #8D6E63;
    padding: 10px;
    background-color: #FFFFFF;
}

/* TAB OTTIMIZZATI CON GRASSETTO */
QTabBar::tab {
    background: #EFEBE9;
    border: 1px solid #BCAAA4;
    border-bottom: none;
    padding: 10px 18px;
    min-width: 70px;
    min-height: 20px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    margin-right: 3px;
    text-align: center;
}

QTabBar::tab:selected {
    background: #FFFFFF;
    border-color: #8D6E63;
    font-weight: bold;
    color: #5D4037;
    border-top: 3px solid #795548;
    padding-top: 8px;
}

QTabBar::tab:hover:!selected {
    background: #D7CCC8;
    color: #5D4037;
}

/* Tab principali - pi√π spaziosi */
QTabWidget > QTabBar::tab {
    min-width: 90px;
    padding: 10px 20px;
}

/* Sotto-tab - pi√π compatti */
QTabWidget QTabWidget QTabBar::tab {
    min-width: 70px;
    padding: 8px 15px;
    font-size: 9pt;
}

/* Tab con icone emoji */
QTabBar::tab[text*="üè†"], 
QTabBar::tab[text*="üîç"], 
QTabBar::tab[text*="üì§"] {
    padding-left: 15px;
    padding-right: 15px;
}

QTableWidget {
    border: 1px solid #BCAAA4;
    gridline-color: #D7CCC8;
    background-color: #FFFFFF;
}

QHeaderView::section {
    background-color: #EFEBE9;
    padding: 5px;
    border: 1px solid #BCAAA4;
    font-weight: bold;
    color: #5D4037;
}

QTableWidget::item:selected {
    background-color: #A1887F;
    color: white;
}

QTabWidget QPushButton {
    padding: 6px 12px;
    min-height: 30px;
}

QToolTip {
    background-color: #FFF3E0;
    border: 1px solid #8D6E63;
    padding: 5px;
    border-radius: 3px;
    color: #3E2723;
}