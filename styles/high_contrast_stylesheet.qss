/* High Contrast Theme per Meridiana - Accessibilit√† massima */
* {
    font-family: "Arial Black", Arial, sans-serif;
    font-size: 11pt;
    color: #000000;
    font-weight: bold;
}

QMainWindow {
    background-color: #FFFFFF;
}

QWidget {
    background-color: #FFFFFF;
    color: #000000;
}

QLabel {
    color: #000000;
    background-color: transparent;
    padding: 3px;
    font-weight: 900;
    border: 1px solid transparent;
}

/* Input Controls */
QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QDateEdit, QDateTimeEdit, QComboBox {
    background-color: #FFFFFF;
    color: #000000;
    border: 3px solid #000000;
    border-radius: 0px;
    padding: 8px;
    selection-background-color: #000000;
    selection-color: #FFFFFF;
    font-weight: bold;
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, 
QDoubleSpinBox:focus, QDateEdit:focus, QDateTimeEdit:focus, QComboBox:focus {
    border: 4px solid #FF0000;
    background-color: #FFFF00;
    color: #000000;
}

QLineEdit[readOnly="true"], QTextEdit[readOnly="true"] {
    background-color: #E0E0E0;
    color: #000000;
    border: 3px solid #808080;
}

/* Buttons */
QPushButton {
    background-color: #000000;
    color: #FFFFFF;
    border: 3px solid #000000;
    border-radius: 0px;
    padding: 12px 20px;
    font-weight: 900;
    min-width: 100px;
    text-transform: uppercase;
}

QPushButton:hover {
    background-color: #FFFF00;
    color: #000000;
    border: 3px solid #000000;
}

QPushButton:pressed {
    background-color: #FF0000;
    color: #FFFFFF;
    border: 3px solid #FFFFFF;
}

QPushButton:disabled {
    background-color: #808080;
    color: #FFFFFF;
    border: 3px solid #404040;
}

/* Tab Widget */
QTabWidget::pane {
    border: 3px solid #000000;
    background-color: #FFFFFF;
    padding: 10px;
}

QTabBar::tab {
    background: #E0E0E0;
    color: #000000;
    border: 3px solid #000000;
    border-bottom: none;
    padding: 10px 20px;
    margin-right: 2px;
    font-weight: 900;
    min-width: 100px;
}

QTabBar::tab:hover {
    background: #FFFF00;
    color: #000000;
}

QTabBar::tab:selected {
    background: #FFFFFF;
    color: #000000;
    border-bottom: 3px solid #FFFFFF;
    font-weight: 900;
}

/* Table Widget */
QTableWidget {
    gridline-color: #000000;
    background-color: #FFFFFF;
    alternate-background-color: #F0F0F0;
    selection-background-color: #000000;
    selection-color: #FFFFFF;
    border: 3px solid #000000;
    color: #000000;
    font-weight: bold;
}

QHeaderView::section {
    background-color: #000000;
    color: #FFFFFF;
    padding: 10px;
    border: 2px solid #FFFFFF;
    font-weight: 900;
    text-transform: uppercase;
}

/* ComboBox */
QComboBox::drop-down {
    border: none;
    width: 30px;
    background-color: #000000;
    border-left: 3px solid #000000;
}

QComboBox::down-arrow {
    image: none;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid #FFFFFF;
    width: 0;
    height: 0;
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    color: #000000;
    selection-background-color: #000000;
    selection-color: #FFFFFF;
    border: 3px solid #000000;
    font-weight: bold;
}

/* ScrollBars */
QScrollBar:vertical {
    background-color: #E0E0E0;
    width: 20px;
    border: 3px solid #000000;
}

QScrollBar::handle:vertical {
    background-color: #000000;
    min-height: 30px;
    border: 2px solid #FFFFFF;
}

QScrollBar::handle:vertical:hover {
    background-color: #FFFF00;
    border: 2px solid #000000;
}

QScrollBar:horizontal {
    background-color: #E0E0E0;
    height: 20px;
    border: 3px solid #000000;
}

QScrollBar::handle:horizontal {
    background-color: #000000;
    min-width: 30px;
    border: 2px solid #FFFFFF;
}

QScrollBar::handle:horizontal:hover {
    background-color: #FFFF00;
    border: 2px solid #000000;
}

/* Menu Bar */
QMenuBar {
    background-color: #000000;
    color: #FFFFFF;
    border-bottom: 3px solid #FFFFFF;
    font-weight: 900;
    padding: 5px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 10px 15px;
    margin: 2px;
}

QMenuBar::item:selected {
    background-color: #FFFF00;
    color: #000000;
    border: 2px solid #000000;
}

QMenu {
    background-color: #FFFFFF;
    color: #000000;
    border: 3px solid #000000;
    font-weight: bold;
}

QMenu::item {
    padding: 10px 25px;
    margin: 2px;
}

QMenu::item:selected {
    background-color: #000000;
    color: #FFFFFF;
}

/* Status Bar */
QStatusBar {
    background-color: #000000;
    color: #FFFFFF;
    border-top: 3px solid #FFFFFF;
    font-weight: bold;
    padding: 8px;
}

/* Group Box */
QGroupBox {
    color: #000000;
    border: 3px solid #000000;
    margin-top: 15px;
    background-color: #FFFFFF;
    font-weight: 900;
    padding-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 20px;
    padding: 5px 10px;
    color: #000000;
    font-weight: 900;
    background-color: #FFFF00;
    border: 2px solid #000000;
}

/* Check Box */
QCheckBox {
    color: #000000;
    spacing: 10px;
    font-weight: 900;
}

QCheckBox::indicator {
    width: 25px;
    height: 25px;
    background-color: #FFFFFF;
    border: 3px solid #000000;
}

QCheckBox::indicator:checked {
    background-color: #000000;
    border: 3px solid #000000;
}

/* Radio Button */
QRadioButton {
    color: #000000;
    spacing: 10px;
    font-weight: 900;
}

QRadioButton::indicator {
    width: 25px;
    height: 25px;
    background-color: #FFFFFF;
    border: 3px solid #000000;
    border-radius: 12px;
}

QRadioButton::indicator:checked {
    background-color: #000000;
    border: 3px solid #000000;
}