/* Stile "Azzurro Ligure" - Versione ottimizzata con tab abbreviati */
QWidget {
    font-family: 'Segoe UI', 'Helvetica Neue', sans-serif;
    font-size: 10pt;
    color: #263238;
}

QMainWindow, QDialog {
    background-color: #F5F5F5;
}

QGroupBox {
    font-weight: bold;
    border: 2px solid #0288D1;
    border-radius: 10px;
    margin-top: 12px;
    background-color: rgba(224, 247, 250, 0.3);
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    left: 15px;
    color: #01579B;
}

QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QDateEdit, QComboBox {
    background-color: #FFFFFF;
    border: 2px solid #B3E5FC;
    border-radius: 6px;
    padding: 6px;
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QDateEdit:focus, QComboBox:focus {
    border-color: #0288D1;
    background-color: #E1F5FE;
}

QPushButton {
    background-color: #03A9F4;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    padding: 10px 15px;
    min-width: 100px;
}

QPushButton:hover {
    background-color: #0288D1;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
}

QPushButton:pressed {
    background-color: #01579B;
}

QPushButton:disabled {
    background-color: #B3E5FC;
    color: #E1F5FE;
}

QTabWidget::pane {
    border: 2px solid #0288D1;
    border-radius: 0px 8px 8px 8px;
    padding: 12px;
    background-color: #FFFFFF;
}

/* TAB OTTIMIZZATI CON GRASSETTO */
QTabBar::tab {
    background: #E1F5FE;
    border: 2px solid #B3E5FC;
    border-bottom: none;
    padding: 10px 18px;
    min-width: 70px;
    min-height: 22px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    margin-right: 2px;
    text-align: center;
}

QTabBar::tab:selected {
    background: #FFFFFF;
    border-color: #0288D1;
    border-bottom: 2px solid #FFFFFF;
    font-weight: bold;
    color: #01579B;
    margin-bottom: -2px;
}

QTabBar::tab:hover:!selected {
    background: #B3E5FC;
    color: #01579B;
}

/* Tab principali - pi√π spaziosi */
QTabWidget > QTabBar::tab {
    min-width: 90px;
    padding: 10px 20px;
}

/* Sotto-tab - pi√π compatti */
QTabWidget QTabWidget QTabBar::tab {
    min-width: 70px;
    padding: 8px 15px;
    font-size: 9pt;
}

/* Tab con icone emoji */
QTabBar::tab[text*="üè†"], 
QTabBar::tab[text*="üîç"], 
QTabBar::tab[text*="üì§"] {
    padding-left: 15px;
    padding-right: 15px;
}

QTableWidget {
    border: 2px solid #B3E5FC;
    gridline-color: #E1F5FE;
    background-color: #FFFFFF;
    alternate-background-color: #F5F5F5;
}

QHeaderView::section {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #03A9F4, stop: 1 #0288D1);
    padding: 6px;
    border: none;
    font-weight: bold;
    color: white;
}

QTableWidget::item:selected {
    background-color: #4FC3F7;
    color: white;
}

QTabWidget QPushButton {
    padding: 6px 12px;
    min-height: 30px;
}

QToolTip {
    background-color: #E1F5FE;
    border: 2px solid #0288D1;
    padding: 6px;
    border-radius: 4px;
    color: #01579B;
}